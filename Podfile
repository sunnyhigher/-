source 'https://github.com/CocoaPods/Specs.git'

target 'SceneBooking' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  pod 'CYLTabBarController' ,:inhibit_warnings => true
  
  # 网络相关
  pod 'Moya'
  pod 'AlamofireNetworkActivityIndicator' ,:inhibit_warnings => true
  
  
  # json 转模型
  pod 'HandyJSON' ,:inhibit_warnings => true

  # 键盘管理
  pod 'IQKeyboardManagerSwift' ,:inhibit_warnings => true
  
  # 刷新与加载
  pod 'MJRefresh' ,:inhibit_warnings => true
  
  # HUD
  pod 'MBProgressHUD' ,:inhibit_warnings => true
  
  # 约束
  pod 'SnapKit' ,:inhibit_warnings => true
  
  # 图片加载框架
  pod 'Kingfisher' ,:inhibit_warnings => true
  
  # 自定义导航栏
  pod 'RTRootNavigationController' ,:inhibit_warnings => true
  
  # 初始化框架
  pod 'Then'
  
  pod 'RxSwift',    '~> 4.0'
  pod 'RxCocoa',    '~> 4.0'
  
  pod 'SDCycleScrollView',  :inhibit_warnings => true
  
  pod 'R.swift',    '5.0.0'
  
  pod 'ChameleonFramework/Swift', :git => 'https://github.com/ViccAlexander/Chameleon.git',  :inhibit_warnings => true

  
end
